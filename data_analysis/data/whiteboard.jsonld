        {
            "@id": "cx:cluster-appropriations-intake",
            "@type": "http://congress.gov/terms#Cluster",
            "name": "Appropriations Intake and Process Modernization",
            "description": "Standardize and streamline the path Public → Member → Appropriations; align timelines with the President’s budget; reduce duplicative entry; and interoperate with committee systems.",
            "itemListElement": [
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-approp-portal-inefficiencies",
                    "text": "Member appropriation portal has inefficiencies and delays, complicating support for local programs (late openings, compressed timelines)."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-late-presidents-budget",
                    "text": "Late release of the President’s budget compresses the appropriations request window; members submit without full budget context."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-inconsistent-opening-times",
                    "text": "Every member office opens request windows at different times; discoverability requires email/phone outreach."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-form-inconsistency",
                    "text": "Forms differ subtly by office (e.g., dropdown vs free text for same field), creating a time tax for intermediaries spanning multiple districts."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-standardized-intake",
                    "text": "Create a standardized intake process to gather constituent data that can push to the member portal and other official systems via APIs."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-general-feedback-portal",
                    "text": "A general House feedback portal could capture ideas and route them into appropriations requests (supporting individuals and regional coalitions)."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-duplicate-data-entry",
                    "text": "Committees use multiple internal systems that do not communicate, forcing staff to re-enter the same numbers and increasing error risk."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-developer-multi-destination-form",
                    "text": "Member websites could host forms that programmatically push data to multiple official repositories to reduce staff effort and errors."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-email-overload-appropriations",
                    "text": "Despite web forms, many appropriations requests arrive by email, overwhelming inboxes and hampering triage/filtering."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-coalition-requests",
                    "text": "Intermediaries (e.g., transit authorities, multi-district non-profits) face disproportionate burdens navigating heterogeneous member processes."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-ideation-for-appropriations",
                    "text": "Use ideation tools to crowdsource district needs for appropriations; community up/downvote to prioritize proposals."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-account-naming-nightmare",
                    "text": "Misaligned account names across Treasury/OMB/agencies complicate linking appropriations requests to official accounts (lack of unique IDs)."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-publish-appropriations-timeline",
                    "text": "Publish clear, coordinated request timelines across member offices; align openings/closings with the President’s budget release."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-as-is-process-mapping",
                    "text": "Map and document the current 'as-is' appropriations intake flow to surface bottlenecks and standardization targets."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-public-member-committee-flow",
                    "text": "Make the Public → Member → Appropriations Committee pathway transparent and trackable for requesters."
                }
            ]
        },
        {
            "@id": "cx:cluster-hearings-modernization",
            "@type": "http://congress.gov/terms#Cluster",
            "name": "Hearings Modernization: Goals, Formats, and Metadata",
            "description": "Clarify hearing goals, reduce performative incentives, pilot new formats (including staff-led discussion), integrate constituent/expert input, and make proceedings discoverable across Congresses.",
            "itemListElement": [
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-hearing-goal-clarity",
                    "text": "Clarify the primary goal of hearings (learn from experts for legislation/oversight vs. performative statements) to drive format choices."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-staff-led-discussion",
                    "text": "Pilot extended staff-led discussions (e.g., 30 minutes) focusing on trade-offs, complementing shorter member rounds."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-constituent-questions",
                    "text": "Collect and incorporate constituent-submitted questions to guide witness Q&A and increase relevance."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-experiment-hearing-styles",
                    "text": "Experiment with varied hearing styles beyond current formats to promote substantive dialogue (learn from Modernization Committee pilots)."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-hearing-tags",
                    "text": "Tag/categorize hearings by issue area and committee jurisdiction to enable programmatic discovery for staffers and the public."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-iterative-conversation",
                    "text": "Treat a hearing as one node in an iterative, multi-year conversation that includes hearings, CRS reports, QFRs, and floor speeches."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-search-engine-topic",
                    "text": "Provide a topic-centric search engine that connects hearings, testimonies, QFRs, and follow-ups across Congresses."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-qfr-linkage",
                    "text": "Link questions for the record (QFRs) back to the originating hearing moments and track responses and follow-up threads."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-less-performative",
                    "text": "Reduce performative incentives (e.g., social media clips) by designing formats that prioritize learning and problem-solving."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-targeted-calls-evidence",
                    "text": "Use targeted calls for evidence (UK model) ahead of hearings to gather scoped public/expert input on upcoming topics."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-question-ranking",
                    "text": "Enable constituents to submit and rank prospective hearing questions to generate a data-informed top list for staff."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-defined-exceptions",
                    "text": "Recognize committees with well-defined hearing purposes (e.g., Rules, Appropriations) while modernizing others' practices."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-sme-communication-methods",
                    "text": "Provide clear, effective channels and formats for SMEs to brief committees and members beyond formal testimony."
                }
            ]
        },
        {
            "@id": "cx:cluster-witness-management",
            "@type": "http://congress.gov/terms#Cluster",
            "name": "Witness Management, Discovery, and Identifiers",
            "description": "Centralized, data-driven witness discovery, tracking, scheduling, and intake; unique identifiers; cross-committee visibility and availability.",
            "itemListElement": [
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-witness-central-registry",
                    "text": "Establish a centralized witness registry with unique identifiers to track appearances across committees and Congresses, including org changes."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-witness-source-of-truth",
                    "text": "Build a cohesive scheduler as a single source of truth for witnesses: availability, prioritization, and transparency across committees."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-witness-intake-portal",
                    "text": "Create a standardized intake portal for non-subpoenaed witnesses (aligned with or built on the witness disclosure form) to replace ad hoc email chains."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-cross-committee-visibility",
                    "text": "Provide cross-committee visibility into 'frequent flyer' witnesses and prior testimony content to avoid siloed networks and improve diversity of perspectives."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-selection-aligned-narrative",
                    "text": "Witness selection should begin with the chair/ranking narrative goal for the hearing, ensuring invited experts align with or constructively challenge that story arc."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-dmv-constraint",
                    "text": "Logistical constraints (travel cost/time, loss of virtual hearings) skew the witness pool toward those in the DMV area or with means to attend."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-vetting-pipeline",
                    "text": "Formalize a vetting pipeline pulling from subject-matter expert networks, alumni, and casework-derived lived-experience witnesses."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-expert-history-tracking",
                    "text": "Enable choosing a witness and instantly viewing all hearings, testimonies, QFRs, and positions associated with that individual across time."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-availability-transparency",
                    "text": "Expose non-sensitive availability data to reduce last-minute cancellations and improve scheduling predictability for staff and witnesses."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-casework-sourcing",
                    "text": "Leverage Case Compass and constituent casework to surface potential witnesses with lived experience relevant to oversight topics."
                }
            ]
        },
        {
            "@id": "cx:cluster-data-standards",
            "@type": "http://congress.gov/terms#Cluster",
            "name": "Data Standards, Structured Reports, and Interoperability",
            "description": "Shift from PDFs and unstructured outputs to machine-readable data (CSV, USLM); align taxonomies and identifiers; enable system interoperability; improve accessibility and discoverability.",
            "itemListElement": [
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-pdf-to-data",
                    "text": "Appropriations report tables are often images of ASCII tables in PDFs; publish underlying data as CSV to enable reuse without ML extraction."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-uslm-roadmap",
                    "text": "Collaborate with GPO to model report data in USLM; short-term: post CSVs alongside PDFs; long-term: fully structured, linked legislative data."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-accessibility",
                    "text": "Structured data and accessible formats directly improve screen reader accessibility and compliance with digital access standards."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-accounts-ids",
                    "text": "Align account naming across Treasury, OMB, and agencies by introducing persistent unique identifiers; reduce manual overwrites/mapping."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-systems-interop",
                    "text": "Ensure internal committee systems interoperate via shared vocabularies and APIs to eliminate duplicative data entry and reduce errors."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-structured-appropriations-effort",
                    "text": "Advance ongoing efforts to structure appropriations data; progress slowed by competing priorities and limited staff capacity."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-hearing-metadata-standards",
                    "text": "Define and apply a common metadata schema for hearings (issue tags, jurisdiction, related bills, witnesses, QFR links) to power search and analysis."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-expert-identifier",
                    "text": "Create persistent identifiers for witnesses/experts to support cross-committee analytics and longitudinal research on expert influence and reuse."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-data-publishing-workflow",
                    "text": "Establish lightweight workflows and approvals for posting companion CSVs and machine-readable annexes to committee prints and reports."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-comment-aggregation",
                    "text": "Develop tools to aggregate and cluster public comments (e.g., from regulations.gov) and surface evolving idea threads across dockets."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-open-research-access",
                    "text": "Ensure federally funded research outputs are accessible to Congress and the public, eliminating paywall barriers to evidence use."
                },
                {
                    "@type": "http://congress.gov/terms#Idea",
                    "@id": "cx:idea-define-committee-outputs",
                    "text": "Define a committee outputs taxonomy (hearings, markups, prints, reports) and publish companion machine-readable data alongside PDFs."
                }
            ]
        },
